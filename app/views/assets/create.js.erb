<% if @asset.persisted? %>
  $('#alerts').append("<%= j(render(partial: 'layouts/notice', locals: {content: @asset.filename, message: 'uploaded succesfully.'})) %>");
  $('.alert').addClass('in');
  $('#assets_container').append("<%= j(render @asset) %>");
<% else %>
  $('#upload_<%=params[:unique_id]%> div.progress').removeClass('active progress-striped').addClass('progress-danger');
<% end %>