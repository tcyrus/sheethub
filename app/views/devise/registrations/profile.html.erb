<%
title "#{@user.display_name}"
description @user.tagline
%>

<%= render 'profile_banner', user: @user %>
<div class="nav-strip nav-strip-profile">
<div class="container-fluid">
<ul class="list-inline">
  <li><h4><a href="<%= user_about_url(subdomain: @user.username) %>"> About </a></h4></li>
  <li class="active"><h4><a href="<%= user_profile_url(subdomain: @user.username) %>">Works</a> <span class="fade-text"><%= @sheets.count %></span></h4></li>
  <li><h4><a href="<%= user_likes_url(subdomain: @user.username) %>"> Likes </a></h4></li>
  <li><h4><a href="<%= new_user_contact_url(subdomain: @user.username) %>"> Contact </a></h4></li>
  <% if current_user == @user %><li><h4><a href="<%= user_settings_url %>"><em class="fa fa-cog"></em> Edit Profile </a></h4></li><% end %>
</ul>
</div>
</div>

<div class="container">
    <div class="row">
    <div class="col-xs-12">
        <%= render 'profile_sheets', sheets: @sheets, user: @user %>
    </div>
  </div>
</div>