<% title 'Password Settings' %>

<div class="container">
    <div class="row">
      <%= render 'user_dashboard_sidebar' %>
      <div class="col-xs-5 white-container">
        <h2>Update My Password</h2>
        <hr>
        <%= simple_form_for(@user, url: user_password_update_url(@user), defaults: { input_html: { class: 'form-control' }} ) do |f| %>
          <div class="form-inputs">
            <%= f.input :current_password %>
            <hr>
            <%= f.input :password, label: 'New password' %>
            <%= f.input :password_confirmation, label: 'New password confirmation' %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, 'Update Password', class: 'btn btn-success btn-lg' %>
          </div>
        <% end %>
      </div>
  </div>
</div>
