<div class="container">
  <div class="row">
    <h3 class="text-center">Report <%= link_to @sheet.title, @sheet %></h3>
    <div class="col-xs-4 col-xs-offset-4 white-container">
        <p class="bg-info"><em class="fa fa-legal"></em> We take copyright infringements seriously. <a href="<%= support_url %>#copyright-report"><em class="fa fa-question-circle"></em></a></p>
        <%= simple_form_for Flag.new,
            :url => url_for(:action => 'flag', :controller => 'sheets'),
            :method => 'post',
            defaults: { input_html: { class: 'form-control' }} do |f| %>
            <%= f.error_notification %>

            <%= f.input :email, autofocus: true, placeholder: 'Your email' if current_user.nil? %>
            <%= f.input :message, autofocus: true, placeholder: "What's the issue you want to report?" %>

            <div class="form-actions">
                <%= f.submit 'Report', class: 'btn btn-success btn-block btn-lg' %>
            </div>

            <%= link_to 'Go back', @sheet %>
        <% end %>
    </div>
  </div>
</div>
